{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": "scripts",
    "typeRoots": ["typechain-types", "node_modules/@types"]
  },
  "include": ["scripts", "scripts/*", "test", "./typechain-types", "./scripts/utils"]
}
